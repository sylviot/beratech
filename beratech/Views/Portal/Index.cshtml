<!DOCTYPE html>
<html lang="pt-br" data-theme="light">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BeraTech | Informações</title>

    <!-- Tailwind + DaisyUI CDN -->
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        :root {
          --color-yellow: #ffcc00;
          --color-green: #2ecc71;
          --color-blue: #3498db;
        }
    </style>
</head>
<body class="bg-base-100 text-base-content">

    <!-- Navbar -->
    <header class="navbar bg-blue-600 text-white shadow-md">
        <div class="flex-1">
            <a class="btn btn-ghost normal-case text-xl text-white">BeraTech</a>
        </div>
    </header>

    <main class="container mx-auto px-4 py-8">

        <!-- Painel de CNPJ -->
        <section class="mb-10">
            <div class="card bg-yellow-100 border border-yellow-300 shadow-lg">
                <div class="card-body">
                    <h2 class="card-title text-yellow-800">Informações da Empresa</h2>
                    <div id="cnpjSection" class="mt-4"></div>
                </div>
            </div>
        </section>

        <!-- Painel: Propósitos -->
        <section class="mb-10">
            <div class="card bg-blue-50 border border-blue-200 shadow-md">
                <div class="card-body">
                    <h2 class="text-2xl font-bold text-blue-800 mb-4">Propósitos</h2>
                    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                        <div class="card bg-white shadow-md">
                            <figure><img src="https://source.unsplash.com/400x250/?goal,focus" alt="Propósitos" /></figure>
                            <div class="card-body">
                                <h3 class="card-title">Missão</h3>
                                <p>Conheça nossos objetivos e valores.</p>
                                <a href="#" class="btn btn-outline btn-info">Acessar</a>
                            </div>
                        </div>
                        <div class="card bg-white shadow-md">
                            <figure><img src="https://source.unsplash.com/400x250/?team,unity" alt="Equipe" /></figure>
                            <div class="card-body">
                                <h3 class="card-title">Equipe</h3>
                                <p>Saiba quem faz parte da BeraTech.</p>
                                <a href="#" class="btn btn-outline btn-info">Ver equipe</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Painel: Inovação -->
        <section class="mb-10">
            <div class="card bg-green-50 border border-green-200 shadow-md">
                <div class="card-body">
                    <h2 class="text-2xl font-bold text-green-800 mb-4">Inovação</h2>
                    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                        <div class="card bg-white shadow-md">
                            <figure><img src="https://source.unsplash.com/400x250/?innovation,ai" alt="Tecnologia" /></figure>
                            <div class="card-body">
                                <h3 class="card-title">Tecnologia</h3>
                                <p>Conheça nossos projetos de inovação.</p>
                                <a href="#" class="btn btn-outline btn-success">Explorar</a>
                            </div>
                        </div>
                        <div class="card bg-white shadow-md">
                            <figure><img src="https://source.unsplash.com/400x250/?research,lab" alt="Pesquisa" /></figure>
                            <div class="card-body">
                                <h3 class="card-title">Pesquisa</h3>
                                <p>Descubra as iniciativas de P&D.</p>
                                <a href="#" class="btn btn-outline btn-success">Saiba mais</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Painel: Fomentação -->
        <section class="mb-10">
            <div class="card bg-yellow-50 border border-yellow-200 shadow-md">
                <div class="card-body">
                    <h2 class="text-2xl font-bold text-yellow-700 mb-4">Fomentação</h2>
                    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                        <div class="card bg-white shadow-md">
                            <figure><img src="https://source.unsplash.com/400x250/?funding,startup" alt="Investimentos" /></figure>
                            <div class="card-body">
                                <h3 class="card-title">Investimentos</h3>
                                <p>Veja oportunidades de financiamento.</p>
                                <a href="#" class="btn btn-outline btn-warning">Acessar</a>
                            </div>
                        </div>
                        <div class="card bg-white shadow-md">
                            <figure><img src="https://source.unsplash.com/400x250/?support,business" alt="Apoio" /></figure>
                            <div class="card-body">
                                <h3 class="card-title">Apoio</h3>
                                <p>Conheça os programas de fomento disponíveis.</p>
                                <a href="#" class="btn btn-outline btn-warning">Saiba mais</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Painel: Capacitação -->
        <section class="mb-10">
            <div class="card bg-blue-50 border border-blue-200 shadow-md">
                <div class="card-body">
                    <h2 class="text-2xl font-bold text-blue-800 mb-4">Capacitação</h2>
                    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                        <div class="card bg-white shadow-md">
                            <figure><img src="https://source.unsplash.com/400x250/?education,training" alt="Cursos" /></figure>
                            <div class="card-body">
                                <h3 class="card-title">Cursos</h3>
                                <p>Participe dos nossos programas de capacitação.</p>
                                <a href="#" class="btn btn-outline btn-info">Participar</a>
                            </div>
                        </div>
                        <div class="card bg-white shadow-md">
                            <figure><img src="https://source.unsplash.com/400x250/?learning,online" alt="Workshops" /></figure>
                            <div class="card-body">
                                <h3 class="card-title">Workshops</h3>
                                <p>Eventos e treinamentos práticos.</p>
                                <a href="#" class="btn btn-outline btn-info">Ver eventos</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer class="footer footer-center bg-blue-600 text-white p-4">
        <aside>
            <p>© 2025 BeraTech — Todos os direitos reservados.</p>
        </aside>
    </footer>

    <!-- Script: controle de CNPJ -->
    <script>
        const temCNPJ = false; // Troque para true para simular CNPJ cadastrado
        const cnpjSection = document.getElementById('cnpjSection');

        if (temCNPJ) {
          cnpjSection.innerHTML = `
            <p class="text-lg text-yellow-800">CNPJ: <strong>12.345.678/0001-99</strong></p>
          `;
        } else {
          cnpjSection.innerHTML = `
            <p class="text-lg text-yellow-800 mb-4">Nenhum CNPJ cadastrado.</p>
            <button class="btn btn-warning">Cadastrar CNPJ</button>
          `;
        }
    </script>
</body>
</html>
